<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Showcase" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Action bar bar color. -->
        <item name="actionBarStyle">@style/Theme.Showcase.ActionBar</item>
        <item name="toolbarStyle">@style/Theme.Showcase.ActionBar</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Showcase.Fullscreen" parent="Theme.Showcase">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="actionBarStyle">@style/Theme.AppCompat.DayNight.NoActionBar</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.Showcase.ActionBar" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="background">@color/white</item>
        <item name="titleTextColor">@color/purple_500</item>
        <item name="titleTextStyle">@style/Theme.Showcase.ActionBar.TitleTextStyle</item>
        <item name="elevation">1dp</item>
    </style>

    <style name="Theme.Showcase.ActionBar.TitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Theme.Showcase.EditText" parent="Widget.AppCompat.EditText">
        <item name="background">@drawable/custom_edit_text</item>
        <item name="height">60dp</item>
        <item name="paddingStart">10dp</item>
        <item name="paddingEnd">10dp</item>
        <item name="android:drawablePadding">16dp</item>
    </style>
</resources>